<controls:MetroWindow x:Class="time_keeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:time_keeper"
        mc:Ignorable="d"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Time Keeper v1.0" Height="200" Width="400">
    <StackPanel>
        <DockPanel LastChildFill="False" Margin="10">
            <Label>Current Time : </Label>
            <TextBox Name="currentTimeBox" Width="200" Margin="27,0,0,0"></TextBox>
            <Label> hours</Label>
        </DockPanel>
        <DockPanel LastChildFill="False" Margin="10">
            <Label>Hourly Wage :  </Label>
            <TextBox Name="hourlyWageBox" Width="100" Margin="27,0,0,0"></TextBox>
            <Label>/hr</Label>
        </DockPanel>
        <DockPanel LastChildFill="False" Margin="10">
            <Label>Current Amount :</Label>
            <TextBox Name="amountBox" Width="200"></TextBox>
        </DockPanel>
        <Button Click="ButtonBase_OnClick">Start / Stop</Button>
    </StackPanel>
</controls:MetroWindow>
